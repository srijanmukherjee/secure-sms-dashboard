{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "typescript.preferences.quoteStyle": "single",
  "editor.useTabStops": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.yarn": true,
    "**/ios": true,
    "**/.bundle": true,
    "**/__tests__": true,
    "**/.eslintrc.js": true
  },
  "[kotlin]": {
    "editor.defaultFormatter": "fwcd.kotlin"
  }
}
